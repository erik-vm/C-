@page
@model WebApp.Pages.Ingredients.IndexModel
@{
    ViewData["Title"] = "Ingredients";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">Total: @Model.Ingredients.Count() ingredients</p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Ingredient
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Default Unit</th>
                    <th>Dietary</th>
                    <th>Allergens</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingredient in Model.Ingredients)
                {
                    <tr>
                        <td><strong>@ingredient.Name</strong></td>
                        <td>@ingredient.Category</td>
                        <td><code>@ingredient.DefaultUnit</code></td>
                        <td>
                            @if (ingredient.IsVegan)
                            {
                                <span class="badge bg-success">Vegan</span>
                            }
                            else if (ingredient.IsVegetarian)
                            {
                                <span class="badge bg-info">Vegetarian</span>
                            }
                        </td>
                        <td>
                            @if (ingredient.Allergens.Any())
                            {
                                foreach (var allergen in ingredient.Allergens)
                                {
                                    <span class="badge bg-warning text-dark me-1">@allergen</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">None</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
