@page
@model WebApp.Pages.Recipes.DetailsModel
@{
    ViewData["Title"] = Model.Recipe.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h1>@Model.Recipe.Name</h1>
                    <div class="d-flex gap-3 text-muted mb-2">
                        <span><i class="bi bi-clock"></i> Prep: @Model.Recipe.PrepTimeMinutes min</span>
                        <span><i class="bi bi-fire"></i> Cook: @Model.Recipe.CookTimeMinutes min</span>
                        <span><i class="bi bi-speedometer"></i> @Model.Recipe.DifficultyLevel</span>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form method="post" asp-page-handler="ToggleFavorite" class="d-inline">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn @(Model.IsFavorite ? "btn-danger" : "btn-outline-danger")">
                                <i class="bi bi-heart@(Model.IsFavorite ? "-fill" : "")"></i>
                                @(Model.IsFavorite ? "Favorited" : "Favorite")
                            </button>
                        </form>
                    }
                    <div class="btn-group">
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                        <a asp-page="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-page="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>

            @if (Model.Recipe.Categories.Any())
            {
                <div class="mb-3">
                    @foreach (var category in Model.Recipe.Categories)
                    {
                        <span class="badge bg-info text-dark me-1">
                            <i class="bi bi-tag"></i> @category
                        </span>
                    }
                </div>
            }

            <div class="card mb-4">
                <div class="card-body">
                    <h4>Description</h4>
                    <div>@Html.Raw(Model.Recipe.DescriptionHtml)</div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-3 sticky-top" style="top: 1rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        Servings
                        <span id="loadingSpinner" class="spinner-border spinner-border-sm ms-2 d-none" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </span>
                    </h5>
                    <div class="input-group mb-2">
                        <button type="button" class="btn btn-outline-secondary" onclick="adjustServings(-1)">
                            <i class="bi bi-dash-lg"></i>
                        </button>
                        <input type="number"
                               id="servingsInput"
                               value="@Model.ScaledRecipe.ScaledServings"
                               min="1"
                               max="500"
                               class="form-control text-center fw-bold"
                               style="font-size: 1.2rem;">
                        <button type="button" class="btn btn-outline-secondary" onclick="adjustServings(1)">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </div>
                    <small class="text-muted d-block text-center" id="scaleInfo">
                        Original: @Model.Recipe.BaseServingSize servings
                        (Scale: <span id="scaleFactor">@Model.ScaledRecipe.ScaleFactor.ToString("0.##")</span>x)
                    </small>

                    <div id="scalingWarning" class="alert alert-warning mt-3 py-2 @(Model.ScaledRecipe.HasScalingWarning ? "" : "d-none")" role="alert">
                        <small>
                            <i class="bi bi-exclamation-triangle"></i>
                            <span id="warningMessage">@Model.ScaledRecipe.ScalingWarningMessage</span>
                        </small>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Ingredients</h5>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var ingredient in Model.ScaledRecipe.Ingredients)
                    {
                        <li class="list-group-item @(ingredient.IsOptional ? "text-muted" : "")">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong class="ingredient-amount">@ingredient.DisplayAmount</strong>
                                    <span class="ingredient-name">@ingredient.Name</span>
                                    @if (!string.IsNullOrEmpty(ingredient.PrepNote))
                                    {
                                        <small class="text-muted d-block">(@ingredient.PrepNote)</small>
                                    }
                                </div>
                                <div>
                                    @if (ingredient.IsOptional)
                                    {
                                        <span class="badge bg-secondary">Optional</span>
                                    }
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>

            @{
                var allAllergens = Model.Recipe.Ingredients
                    .SelectMany(i => i.Allergens)
                    .Distinct()
                    .ToList();
            }

            @if (allAllergens.Any())
            {
                <div class="card mt-3">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0">
                            <i class="bi bi-exclamation-triangle"></i> Allergen Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-1">
                            @foreach (var allergen in allAllergens)
                            {
                                <span class="badge bg-warning text-dark">@allergen</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const recipeId = @Model.Id;
        let updateTimeout;

        async function updateScaling(servings) {
            const spinner = document.getElementById('loadingSpinner');
            try {
                // Show loading indicator
                spinner.classList.remove('d-none');

                const response = await fetch(`?handler=Scale&id=${recipeId}&servings=${servings}`);
                const data = await response.json();

                // Update scale factor
                document.getElementById('scaleFactor').textContent = data.scaleFactor.toFixed(2);

                // Update warning
                const warningDiv = document.getElementById('scalingWarning');
                const warningMsg = document.getElementById('warningMessage');
                if (data.hasScalingWarning) {
                    warningMsg.textContent = data.scalingWarningMessage;
                    warningDiv.classList.remove('d-none');
                } else {
                    warningDiv.classList.add('d-none');
                }

                // Update ingredients
                const ingredientsList = document.querySelector('.list-group');
                const items = ingredientsList.querySelectorAll('.list-group-item');

                data.ingredients.forEach((ingredient, index) => {
                    if (items[index]) {
                        const amountElement = items[index].querySelector('.ingredient-amount');
                        if (amountElement) {
                            amountElement.textContent = ingredient.displayAmount;
                        }
                    }
                });

            } catch (error) {
                console.error('Error updating scaling:', error);
            } finally {
                // Hide loading indicator
                spinner.classList.add('d-none');
            }
        }

        function adjustServings(delta) {
            const input = document.getElementById('servingsInput');
            let current = parseInt(input.value);
            let newValue = Math.max(1, Math.min(500, current + delta));
            input.value = newValue;

            // Debounce the update
            clearTimeout(updateTimeout);
            updateTimeout = setTimeout(() => updateScaling(newValue), 300);
        }

        document.getElementById('servingsInput').addEventListener('change', function() {
            let value = parseInt(this.value);
            if (value < 1) this.value = 1;
            if (value > 500) this.value = 500;

            clearTimeout(updateTimeout);
            updateTimeout = setTimeout(() => updateScaling(this.value), 300);
        });

        document.getElementById('servingsInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                clearTimeout(updateTimeout);
                updateScaling(this.value);
            }
        });
    </script>
}
