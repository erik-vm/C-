@page
@model WebApp.Pages.Recipes.WhatCanIMakeModel
@{
    ViewData["Title"] = "What Can I Make?";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-basket"></i> What Can I Make?</h3>
                </div>
                <div class="card-body">
                    <p class="lead">Select the ingredients you have on hand, and we'll show you what recipes you can make!</p>

                    <form method="get">
                        <div class="row g-3">
                            <div class="col-md-9">
                                <label asp-for="AvailableIngredients" class="form-label fw-bold">
                                    <i class="bi bi-check2-square"></i> Select Your Available Ingredients
                                </label>
                                <select asp-for="AvailableIngredients"
                                        class="form-select"
                                        asp-items="Model.AllIngredients"
                                        multiple
                                        size="15">
                                </select>
                                <small class="text-muted">Hold Ctrl (Cmd on Mac) to select multiple ingredients</small>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="MinMatchPercentage" class="form-label fw-bold">
                                    <i class="bi bi-percent"></i> Minimum Match %
                                </label>
                                <select asp-for="MinMatchPercentage" class="form-select">
                                    <option value="50">50% or more</option>
                                    <option value="70" selected>70% or more</option>
                                    <option value="80">80% or more</option>
                                    <option value="90">90% or more</option>
                                    <option value="100">100% (exact match)</option>
                                </select>
                                <small class="text-muted mt-2 d-block">Based on required ingredients only</small>

                                <div class="mt-4">
                                    <button type="submit" class="btn btn-primary w-100 mb-2">
                                        <i class="bi bi-search"></i> Find Recipes
                                    </button>
                                    <a asp-page="WhatCanIMake" class="btn btn-secondary w-100">
                                        <i class="bi bi-x-circle"></i> Clear
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model.SearchPerformed)
            {
                @if (!Model.Results.Any())
                {
                    <div class="alert alert-info text-center" role="alert">
                        <i class="bi bi-info-circle fs-3"></i>
                        <p class="mb-0 mt-2">No recipes found with @Model.MinMatchPercentage% or more ingredient match.</p>
                        <p class="text-muted mb-0">Try lowering the minimum match percentage or selecting more ingredients.</p>
                    </div>
                }
                else
                {
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle"></i> Found <strong>@Model.Results.Count</strong> recipe(s) you can make!
                    </div>

                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        @foreach (var result in Model.Results)
                        {
                            <div class="col">
                                <div class="card h-100">
                                    <div class="card-header @(result.MatchPercentage == 100 ? "bg-success" : "bg-warning") text-white">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="fw-bold">Match: @result.MatchPercentage%</span>
                                            @if (result.MatchPercentage == 100)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@result.RecipeName</h5>

                                        <div class="mb-2">
                                            <span class="badge bg-primary">@result.DifficultyLevel</span>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-clock"></i> @result.TotalTimeMinutes min
                                            </span>
                                            <span class="badge bg-info">
                                                <i class="bi bi-people"></i> @result.BaseServingSize servings
                                            </span>
                                        </div>

                                        @if (result.Categories.Any())
                                        {
                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-tag"></i> @string.Join(", ", result.Categories)
                                                </small>
                                            </div>
                                        }

                                        <hr />

                                        <div class="mb-2">
                                            <strong><i class="bi bi-check-circle-fill text-success"></i> You Have (@result.MatchedIngredientsCount):</strong>
                                            <div class="mt-1">
                                                @foreach (var ingredient in result.MatchedIngredients.Take(3))
                                                {
                                                    <span class="badge bg-success text-white me-1 mb-1">@ingredient</span>
                                                }
                                                @if (result.MatchedIngredients.Count > 3)
                                                {
                                                    <span class="badge bg-success text-white">+@(result.MatchedIngredients.Count - 3) more</span>
                                                }
                                            </div>
                                        </div>

                                        @if (result.MissingIngredients.Any())
                                        {
                                            <div class="mb-2">
                                                <strong><i class="bi bi-cart-plus text-warning"></i> You Need (@result.MissingIngredients.Count):</strong>
                                                <div class="mt-1">
                                                    @foreach (var ingredient in result.MissingIngredients)
                                                    {
                                                        <span class="badge bg-warning text-dark me-1 mb-1">@ingredient</span>
                                                    }
                                                </div>
                                            </div>
                                        }

                                        @if (result.HasAllergens)
                                        {
                                            <div class="mt-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-exclamation-triangle"></i> Contains:
                                                    @foreach (var allergen in result.AllergenWarnings.Take(2))
                                                    {
                                                        <span class="badge bg-danger text-white me-1">@allergen</span>
                                                    }
                                                    @if (result.AllergenWarnings.Count > 2)
                                                    {
                                                        <span class="badge bg-danger text-white">+@(result.AllergenWarnings.Count - 2) more</span>
                                                    }
                                                </small>
                                            </div>
                                        }
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a asp-page="Details" asp-route-id="@result.RecipeId" class="btn btn-sm btn-primary w-100">
                                            <i class="bi bi-eye"></i> View Full Recipe
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="alert alert-light border text-center" role="alert">
                    <i class="bi bi-info-circle fs-3 text-muted"></i>
                    <p class="mb-0 mt-2 text-muted">Select ingredients above and click "Find Recipes" to see what you can make!</p>
                </div>
            }
        </div>
    </div>
</div>
