@page
@model LoadGameModel
@{
    ViewData["Title"] = "Load Game";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">üìÇ Load Saved Game</h3>
                </div>
                <div class="card-body">
                    @if (Model.SavedGames == null || Model.SavedGames.Count == 0)
                    {
                        <div class="alert alert-info">
                            <h5>No saved games found</h5>
                            <p>Start a new game and save it to see it here.</p>
                            <a href="/" class="btn btn-primary">Start New Game</a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Game ID</th>
                                        <th>Players</th>
                                        <th>Board</th>
                                        <th>Last Played</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var game in Model.SavedGames)
                                    {
                                        <tr>
                                            <td><code>@game.GameId.Substring(0, Math.Min(8, game.GameId.Length))</code></td>
                                            <td>
                                                <strong>@game.Player1Name</strong>
                                                @if (game.Player1IsAi)
                                                {
                                                    <span class="badge bg-secondary">AI</span>
                                                }
                                                vs
                                                <strong>@game.Player2Name</strong>
                                                @if (game.Player2IsAi)
                                                {
                                                    <span class="badge bg-secondary">AI</span>
                                                }
                                            </td>
                                            <td>@game.BoardHeight x @game.BoardWidth</td>
                                            <td>@game.UpdatedAt?.ToString("g") ?? @game.CreatedAt.ToString("g")</td>
                                            <td>
                                                <form method="post" asp-page-handler="LoadGame" class="d-inline">
                                                    <input type="hidden" name="gameId" value="@game.GameId" />
                                                    <button type="submit" class="btn btn-sm btn-success">Load</button>
                                                </form>
                                                <form method="post" asp-page-handler="DeleteGame" class="d-inline">
                                                    <input type="hidden" name="gameId" value="@game.GameId" />
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this game?')">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-3">
                <a href="/" class="btn btn-outline-secondary">‚Üê Back to Home</a>
            </div>
        </div>
    </div>
</div>
