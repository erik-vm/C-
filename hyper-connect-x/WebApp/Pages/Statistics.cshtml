@page
@using DAL
@model StatisticsModel
@{
    ViewData["Title"] = "Game Statistics";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">üìä Game Statistics</h3>
                </div>
                <div class="card-body">
                    @if (Model.AllGames == null || Model.AllGames.Count == 0)
                    {
                        <div class="alert alert-info">
                            <h5>No games played yet</h5>
                            <p>Start playing games to see statistics here!</p>
                            <a href="/" class="btn btn-primary">Start New Game</a>
                        </div>
                    }
                    else
                    {
                        <!-- Overall Statistics -->
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h2 class="text-primary">@Model.AllGames.Count</h2>
                                        <p class="mb-0">Total Games</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h2 class="text-success">@Model.CompletedGames</h2>
                                        <p class="mb-0">Completed</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h2 class="text-warning">@Model.InProgressGames</h2>
                                        <p class="mb-0">In Progress</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h2 class="text-info">@Model.AverageMovesPerGame.ToString("F1")</h2>
                                        <p class="mb-0">Avg Moves</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Games -->
                        <h4 class="mt-4 mb-3">Recent Games</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Players</th>
                                        <th>Board</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var game in Model.AllGames.Take(10))
                                    {
                                        var isCompleted = Model.IsGameCompleted(game);
                                        <tr>
                                            <td>@game.CreatedAt.ToString("g")</td>
                                            <td>
                                                <strong>@game.Player1Name</strong>
                                                @if (game.Player1IsAi)
                                                {
                                                    <span class="badge bg-secondary">AI-@game.Player1AiDifficulty</span>
                                                }
                                                vs
                                                <strong>@game.Player2Name</strong>
                                                @if (game.Player2IsAi)
                                                {
                                                    <span class="badge bg-secondary">AI-@game.Player2AiDifficulty</span>
                                                }
                                            </td>
                                            <td>@game.BoardHeight x @game.BoardWidth (@game.BoardShape)</td>
                                            <td>
                                                @if (isCompleted)
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">In Progress</span>
                                                }
                                            </td>
                                            <td>
                                                <form method="post" asp-page-handler="ViewGame" class="d-inline">
                                                    <input type="hidden" name="gameId" value="@game.GameId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-primary">View</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Player Statistics -->
                        @if (Model.PlayerStats.Count > 0)
                        {
                            <h4 class="mt-4 mb-3">Player Rankings</h4>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Rank</th>
                                            <th>Player</th>
                                            <th>Games Played</th>
                                            <th>Wins</th>
                                            <th>AI Difficulty</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int rank = 1;
                                        }
                                        @foreach (var player in Model.PlayerStats.Take(10))
                                        {
                                            <tr>
                                                <td>
                                                    @if (rank == 1)
                                                    {
                                                        <span class="badge bg-warning">ü•á @rank</span>
                                                    }
                                                    else if (rank == 2)
                                                    {
                                                        <span class="badge bg-secondary">ü•à @rank</span>
                                                    }
                                                    else if (rank == 3)
                                                    {
                                                        <span class="badge bg-danger">ü•â @rank</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-info">@rank</span>
                                                    }
                                                </td>
                                                <td><strong>@player.PlayerName</strong></td>
                                                <td>@player.GamesPlayed</td>
                                                <td>@player.Wins</td>
                                                <td>
                                                    @if (player.IsAi)
                                                    {
                                                        <span class="badge bg-secondary">AI - @player.AiDifficulty</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-primary">Human</span>
                                                    }
                                                </td>
                                            </tr>
                                            rank++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="mt-3">
                <a href="/" class="btn btn-outline-secondary">‚Üê Back to Home</a>
            </div>
        </div>
    </div>
</div>
